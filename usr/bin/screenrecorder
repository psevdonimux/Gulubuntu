#!/bin/sh
output_dir="$HOME/Видео"
base_filename="screencast"
output_file="$output_dir/$base_filename.mp4"
counter=1
while [ -f "$output_file" ]; do
    output_file="$output_dir/${base_filename}_$counter.mp4"
    counter=$((counter + 1))
done
if [ -z $(pidof ffmpeg) ]; then
ffmpeg -f x11grab -framerate 60 -i :0.0 -f pulse -i alsa_input.pci-0000_00_1f.3.analog-stereo.5 -f pulse -i alsa_output.pci-0000_00_1b.0.analog-stereo.monitor -c:v mpeg4 -c:a aac -preset ultrafast -vtag mp4v -q:v 3 -b:v 1M -ar 44100 "$output_file"
else
pkill ffmpeg
fi
